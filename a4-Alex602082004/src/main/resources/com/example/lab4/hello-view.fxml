                    <Label fx:id="M">Apasa</Label>
                    <Button fx:id="buttonAdd" onAction="#onAddTortButtonClick">Adauga</Button>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <Label fx:id="labelIdDel">ID</Label>
                    <TextField fx:id="textFieldIdDel"/>
                </VBox>
                <VBox>
                    <Label fx:id="I">Apasa</Label>
                    <Button fx:id="buttonDel" onAction="#onDelTortButtonClick">Delete</Button>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <Label fx:id="labelIdUpdate">ID</Label>
                    <TextField fx:id="textFieldIdUpdate"/>
                </VBox>
                <VBox>
                    <Label fx:id="labelCakeTypeUpdate">CakeType</Label>
                    <TextField fx:id="textFieldCakeTypeUpdate"/>
                </VBox>
                <VBox>
                    <Label fx:id="S">Apasa</Label>
                    <Button fx:id="buttonUpdate" onAction="#onUpTortButtonClick">Update</Button>
                </VBox>
            </HBox>
        </VBox>
        <VBox>
            <HBox>
                <VBox>
                    <Label fx:id="labelIdComanda">ID</Label>
                    <TextField fx:id="textFieldIdComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="labelTorturiAddComanda">Torturi</Label>
                    <TextField fx:id="textFieldNameComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="labelDataComanda">Data</Label>
                    <TextField fx:id="textFieldDataComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="O">Apasa</Label>
                    <Button fx:id="buttonAddComanda" onAction="#onAddComandaButtonClick">Adauga</Button>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <Label fx:id="LabelIdDelComanda">ID</Label>
                    <TextField fx:id="TextFieldidDelComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="m">Apasa</Label>
                    <Button fx:id="ButtonDelComanda" onAction="#onDelComandaButtonClick">Delete</Button>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <Label fx:id="labelIdUpdateComanda">ID</Label>
                    <TextField fx:id="textFieldIdUpdateComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="labelTorturiComandaUpdate">Torturi</Label>
                    <TextField fx:id="textFieldTorturiUpdate"/>
                </VBox>
                <VBox>
                    <Label fx:id="labelUpDateComanda">Date</Label>
                    <TextField fx:id="textUpDateComanda"/>
                </VBox>
                <VBox>
                    <Label fx:id="N">Apasa</Label>
                    <Button fx:id="buttonUpdateComanda" onAction="#onUpComandaButtonClick">Update</Button>
                </VBox>
